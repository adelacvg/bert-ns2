{
  "train": {
    "train_batch_size":8,
    "gradient_accumulate_every": 1,
    "train_lr": 0.0001,
    "train_num_steps": 1000000,
    "adam_betas": [0.9, 0.99],
    "save_and_sample_every":1000,
    "timesteps":1000,
    "logs_folder" : "logs/tts",
    "seed": 1234,
    "epochs": 10000,
    "betas": [
      0.8,
      0.99
    ],
    "num_workers": 32,
    "eps": 1e-09,
